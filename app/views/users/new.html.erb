<div class= "container">
  <%= form_for @user, url: {action: "create"} do |f| %>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputAddress">Pr√©nom</label>
        <%= f.text_field :first_name, class: "form-control mb-3" %>
      </div>
      <div class="form-group col-md-6">
        <label for="inputAddress2">Nom</label>
        <%= f.text_field :last_name, class: "form-control mb-3" %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputAge">Age</label>
        <%= f.number_field :age, class: "form-control mb-3" %>
      </div>
      <div class="form-group col-md-6">
        <label for="inputEmail4">Email</label>
        <%= f.text_field :email, class: "form-control mb-3" %>
      </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputPassword4">Password</label>
        <%= f.password_field :password, class: "form-control mb-3" %>
      </div>
      <div class="form-group col-md-6">
        <button type="submit" class="btn btn-primary">Valider</button>
      </div>
  <% end %>
</div>