<h1>Editer le gossip</h1>

<%= form_for @gossip do |f|%>
  <div class="form-group">
  <label>Titre</label>
  <%= f.text_field :title %>
  </div>
  <div class="form-group">
  <label>Content</label>
  <%= f.text_area :content %>
  </div>
  <div class="form-group">
  <button type="submit">Modifier l'article</button>
  </div>
<% end %>