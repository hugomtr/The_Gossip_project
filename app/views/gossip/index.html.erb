
<div class="container">
  <div class="row">
  <% @gossips.each do |gossip| %> 
    <div class="col-sm-6 card-deck">
    <div class="card mb-3" style="width: 20rem; text-align: center">
      <div class="card-body">
        <h5 class="card-title"><%= gossip.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted">by :<%= User.find(gossip.user_id).first_name %></h6>
            <p class="card-text"><%= gossip.content %></p>
            <a href="<%= gossip_path(gossip.id) %>" class="card-link btn btn-dark">Show</a>
            <% if gossip.user_id == current_user.id %>
              <a href="<%= edit_gossip_path(gossip.id) %>" class="card-link btn btn-primary">Edit</a>
            <% else %>
              <a href="<%= gossip_index_path %>" class="card-link btn btn-primary">Edit</a>
            <% end %>
            <a href="<%= gossip_path(gossip.id) %>" data-confirm="Êtes-vous sûr ?" data-method="DELETE" class="card-link btn btn-danger" >Delete</a></p> 
            <br> <%=Like.where(gossip_id:gossip.id).length %>  
            <!-- <%= button_to 'Like', gossip_likes_path(gossip), method: :post %> -->
            <% pre_like = gossip.likes.find { |like| like.user_id == current_user.id} %>
            <% if pre_like %>
            <%= button_to 'Unlike', gossip_like_path(gossip, pre_like), method: :delete %>
            <% else %>
            <%= button_to 'Like', gossip_likes_path(gossip), method: :post %>
            <% end %>
      </div>
    </div>
    </div>
  <% end %>   
  </div>
  <div class="left_a" style="margin-right:10px;"><a href="<%= new_gossip_path%>" class ="btn btn-light">Créer un potin</a></div>
  <a href="<%= session_path(session[:user_id]) %>" data-confirm="Êtes-vous sûr ?" data-method="DELETE" class="card-link btn btn-danger" >Disconnect</a></p>   
  <% if current_user %>
  
<% end %>
Logged in as <%= current_user.email %>
</div>

