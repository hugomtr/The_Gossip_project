<div class="container">
            <div class="row">
            
                <div class="col-md-4">

                    <div class="card my-4">
                        <h5 class="card-header">Intro</h5>
                        <div class="card-body">
                          <p class="card-text"><a href="<%=gossip_index_path%>"> Revenir à la liste des potins</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    <h1 class="my-4">Le potin en détail</h1>
                    <div class="card mb-4">
                        <div class="card-body">
                            <h2 class="card-title"><%= @gossip.title %></h2>
                            <p class="card-text"><p><%= @gossip.content %></p>
                            <p class="card-text"><a href="<%=user_path(@gossip.user_id)%>" ><%= User.find(@gossip.user_id).first_name %></a></p>
                            <p class="card-text"><a href="<%=city_path(User.find(@gossip.user_id).city_id) %>" ><%= City.find(User.find(@gossip.user_id).city_id).name %></a></p>
                        </div>
                        <div class="card-footer text-muted">
                            Created at 
                        </div>
                    </div>
                    <%= link_to 'New Comment', new_comment_path %>

                <div class="row">
                  <div class="col-sm-3">
                    <div class="well">
                    <% Comment.where(gossip_id: @gossip.id ).each do |comment| %> 
                    <p><%= User.find(comment.user_id).first_name %></p>
                    </div>
                  </div>
                  <div class="col-sm-9">
                    <div class="well">
                    
                  <h5 class="card-title"></h5>
                      <p class="card-text"><%= comment.content %></p>
                      <a href="<%=edit_comment_path(comment.id) %>" >Edit</a> 
                      <a href="<%= comment_path(comment.id) %>" data-confirm="Êtes-vous sûr ?" data-method="DELETE">Delete</a>
                      <a href="../comments/new/<%=params[:id]%>">New Comment</a>
                      <% end %>
                      </div>
                
                    <ul class="pagination justify-content-center mb-4">
                        <li class="page-item"><a class="page-link" href="#!">← Older</a></li>
                        <li class="page-item disabled"><a class="page-link" href="#!">Newer →</a></li>
                    </ul>
                </div>
                
            </div>
        </div>

  </div>
